{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/types/*",
        "node_modules/@types/*",
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
