{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,

    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      "lib/*": [ "src/*" ],
      "*": [ "node_modules/types/*", "node_modules/*" ]
    },

    "lib": ["es7", "dom"]
  },
  "include": [
    "src/**/*"
  ]
}
