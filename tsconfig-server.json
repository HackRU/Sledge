{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [ "node_modules/*", "src/types/*" ]
    }
  },
  "include": [
    "src/index.ts",
    "src/server/**/*",
    "src/protocol/**/*"
  ]
}
