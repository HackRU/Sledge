{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,

    "lib": ["es5", "es6", "dom"],

    "incremental": true,
    "tsBuildInfoFile": "tmp/server.tsbuildinfo"
  },
  "include": [
    "src/index.ts",
    "src/server/**/*",
    "src/protocol/**/*"
  ]
}
